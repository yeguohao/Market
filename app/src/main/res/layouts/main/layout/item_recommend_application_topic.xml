<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/recommend_item_padding"
    android:layout_marginBottom="@dimen/recommend_item_padding"
    android:layout_height="40dp">

    <TextView
        android:id="@+id/recommend_item_topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/recommend_item_padding"
        android:textColor="#000000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/recommend_item_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/recommend_item_padding"
        android:text="@string/more_item_recommend" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recommend_item_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp" />

</FrameLayout>